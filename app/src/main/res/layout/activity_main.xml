<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lzk.customviewtest2.MainActivity">

    <com.lzk.customviewtest2.MyView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="30dp"
        android:background="@color/colorAccent"/>

    <com.lzk.customviewtest2.CustomTextView
        xmlns:my="http://schemas.android.com/apk/res-auto"
        android:id="@+id/custom_text_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="自定义TextView"
        android:textSize="20sp"
        android:gravity="center"
        android:background="@color/colorAccent"
        />

    <com.lzk.customviewtest2.CustomViewGroupTest1
        android:id="@+id/custom_view_group_title"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>
</LinearLayout>
